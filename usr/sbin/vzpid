veidmark='envID:'
namemark='Name:'

usage()
{
	echo 'Usage: vzpid [pid ...] [-h]'
}

header()
{
	printf '%s\t%s\t%s\n' 'Pid' 'VEID' 'Name'
}

getveid()
{
	local pid="$1"

	[ -f "/proc/$pid/status" ] || return
	awk -v "pid=$pid" '
BEGIN {veid=0; name=""}
($1 == "'"$namemark"'") {name = $2}
($1 == "'"$veidmark"'") {veid = $2}
END {printf("%d\t%s\t%s\n", pid, veid, name)}
	' <"/proc/$pid/status"
}

if [ $# -eq 0 ]; then
	usage >&2
	exit 1
elif [ $# -eq 1 -a "$1" = '-' ]; then
	set -- `tr -s '[[:space:]]' ' '`
elif [ $# -eq 1 -a "$1" = '-h' ]; then
	usage
	exit 0
fi

header
for i; do
	getveid "$i"
done
